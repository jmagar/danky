{
  "extends": "@danky/typescript-config/base.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/client.ts",
    "src/schema/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "noEmit": false,
    "paths": {
      "@danky/logger": ["../logger/src"],
      "@danky/schema": ["../schema/src"]
    }
  },
  "references": [
    { "path": "../logger" },
    { "path": "../schema" }
  ]
}
