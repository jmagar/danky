{
  // LLM Configuration
  llm: {
    provider: "anthropic",
    model: "claude-3-opus-20240229",
    temperature: 0.7,
    maxTokens: 4096
  },

  // MCP Server Configurations
  mcpServers: {
    filesystem: {
      command: "npx",
      args: [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ]
    },
    fetch: {
      command: "uvx",
      args: ["mcp-server-fetch"]
    },
    weather: {
      command: "npx",
      args: [
        "-y",
        "@h1deya/mcp-server-weather"
      ]
    }
  }
} 