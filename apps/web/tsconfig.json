{
  "extends": "@danky/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["lib/*"],
      "@/components/*": ["components/*"],
      "@/app/*": ["app/*"],
      "@/hooks/*": ["hooks/*"],
      "@/styles/*": ["styles/*"],
      "@danky/ui": ["../../packages/ui/src"],
      "@danky/ui/*": ["../../packages/ui/src/*"],
      "@danky/mcp": ["../../packages/mcp/src"],
      "@danky/mcp/*": ["../../packages/mcp/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    "types.d.ts"
  ],
  "exclude": ["node_modules", ".next", "dist"]
}
