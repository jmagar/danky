{
  "extends": "../../packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/env": ["./env.ts"],
      "@danky/ui": ["../../packages/ui/src"],
      "@danky/ui/*": ["../../packages/ui/src/*"],
      "@danky/schema": ["../../packages/schema/src"],
      "@danky/schema/*": ["../../packages/schema/src/*"],
      "@danky/db": ["../../packages/db/src"],
      "@danky/db/*": ["../../packages/db/src/*"],
      "@danky/redis": ["../../packages/redis/src"],
      "@danky/redis/*": ["../../packages/redis/src/*"],
      "@danky/logger": ["../../packages/logger/src"],
      "@danky/logger/*": ["../../packages/logger/src/*"],
      "@danky/mcp": ["../../packages/mcp/src"],
      "@danky/mcp/*": ["../../packages/mcp/src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
