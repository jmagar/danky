{
  "extends": "../../packages/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@danky/ui": ["../../packages/ui/src"],
      "@danky/ui/*": ["../../packages/ui/src/*"],
      "@danky/mcp": ["../../packages/mcp/src"],
      "@danky/mcp/*": ["../../packages/mcp/src/*"]
    },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
